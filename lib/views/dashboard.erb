<!DOCTYPE html>
<html lang='en'>
  <%= erb :'includes/header' %>
  <body class='dashboard'>
    <h1><%= @title %></h1>
    <% @board.in_groups_of(3, false) do |group| %>
      <div class='row'>
        <% group.each do |member| %>
          <div class='col-md-4 board-member text-center'>
            <% url = "/metrics/#{member['metric']}" %>
            <iframe src='<%= url %>?layout=bare&<%= query_string member %>' class='embed-responsive-item' width='360' height='200' frameBorder='0' scrolling='no'></iframe>
          </div>
        <% end %>
      </div>
    <% end %>
  </body>
</html>
