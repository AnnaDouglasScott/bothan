<div prefix="dct: http://purl.org/dc/terms/
            rdf: http://www.w3.org/1999/02/22-rdf-syntax-ns#
            dcat: http://www.w3.org/ns/dcat#
            foaf: http://xmlns.com/foaf/0.1/">
  <div typeof="dcat:Dataset" resource="<%= request.url %>">

    <h1 property="dct:title">ODI Metrics</h1>
    <p property="dct:created" content='<%= @created.iso8601 %>' datatype='xsd:dateTime'>Created: <%= @created %></p>
    <p property="dct:modified" content='<%= @updated.iso8601 %>' datatype='xsd:dateTime'>Modified: <%= @updated %></p>
    <p property="dct:description">Open Data Institute Metrics</p>

    <div property="dct:license"
      resource="https://creativecommons.org/licenses/by-sa/4.0/">
      <a href="https://creativecommons.org/licenses/by-sa/4.0/">
        <span property="dct:title">Creative Commons Attribution-ShareAlike</span>
      </a>
    </div>

    <div property="dct:publisher"
      resource="http://theodi.org">
      <a href="http://theodi.org" about="http://theodi.org" property="foaf:homepage">
        <span property="foaf:name">Open Data Institute</span>
      </a>
    </div>

    <a href="http://purl.org/linked-data/sdmx/2009/code#freq-D" property="dcat:accrualPeriodicity">Daily</a>

    <ul id='metrics'>
      <% @metrics[:metrics].each do |metric| %>
        <li><a href="<%= metric[:url].gsub('.json', '') %>"><%= extract_title(metric[:url]) %></a></li>
      <% end %>
    </ul>

  </div>
</div>
